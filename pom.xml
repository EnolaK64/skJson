<!--                        <goals>-->
<!--                            <goal>exec</goal>-->
<!--                        </goals>-->
<!--                    </execution>-->
<!--                </executions>-->
<!--            </plugin>-->
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <targetPath>.</targetPath>
                <includes>
                    <include>tests/</include>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                    <include>lang/default.lang</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
